<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"/>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/white_dirty</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_koerich</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Koerich</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Koerich</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Koerich</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Koerich</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Koerich</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBar.Widget.Koerich</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_koerich</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_koerich</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Koerich</item>
    </style>

    <style name="ActionBar.Solid.Koerich" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_koerich</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_koerich</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_koerich</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Koerich</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle.Koerich</item>
    </style>

    <style name="ActionBar.Widget.Koerich" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">#e2e2e2</item>
    </style>

    <style name="ActionBar.Transparent.Koerich" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_koerich</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Koerich</item>
    </style>

    <style name="PopupMenu.Koerich" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_koerich</item>
    </style>

    <style name="DropDownListView.Koerich" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_koerich</item>
    </style>

    <style name="ActionBarTabStyle.Koerich" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_koerich</item>
    </style>

    <style name="DropDownNav.Koerich" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_koerich</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_koerich</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_koerich</item>
    </style>

    <style name="ProgressBar.Koerich" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_koerich</item>
    </style>

    <style name="ActionButton.CloseMode.Koerich" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_koerich</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Koerich.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Koerich</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Koerich</item>
    </style>

    <style name="ActionBar.TitleTextStyle.Koerich" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">21dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="firstSectionHeader" parent="sectionHeader">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="inputLine.Label" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/input_line</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <color name="subText">#A1A1A1</color>
    <color name="mainText">#444444</color>
    <color name="featuredText">#D80700</color>
    <color name="button_cancel">#CD5C5C</color>
    <color name="emphasis">@color/featuredText</color>
    <color name="white">#FFFFFF</color>
    <color name="white_dirty">#F5F5F5</color>
    <color name="cesta_header">#e72b3c</color>
    <color name="cesta_header_off">#a3a3a3</color>


    <dimen name="textTiny">10sp</dimen>
    <dimen name="textMicro">12sp</dimen>
    <dimen name="textSmall">14sp</dimen>
    <dimen name="textNormal">16sp</dimen>
    <dimen name="textMedium">18sp</dimen>
    <dimen name="textMediumLarge">18sp</dimen>
    <dimen name="textLarge">24sp</dimen>
    <dimen name="textExtraLarge">30sp</dimen>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DescriptionCard">
        <item name="android:background">@drawable/description_card_background</item>
    </style>

    <style name="DescriptionCardTitle">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/mainText</item>
    </style>

    <style name="DescriptionCardContent">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/subText</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="EstoqueCardContent">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">@color/subText</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="FichaDoClienteLabel">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">#474747</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FichaDoClienteData">
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textColor">#474747</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="FichaContatosLabel1">
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:textColor">#474747</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="FichaContatosData1">
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:textColor">#474747</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="FichaContatosLabel2">
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:textColor">#474747</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="FichaContatosData2">
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:textColor">#474747</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
    </style>


</resources>
